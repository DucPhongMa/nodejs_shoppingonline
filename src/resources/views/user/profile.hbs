<div class="text-center">
    <h1>Hello {{user}}</h1>
    {{#if isAdmin}}
    <a href="/category/index" class="btn btn-primary">Admin Management</a>
    {{/if}}
    <hr>
</div>
{{#if orders}}
<div class="row" style="min-height: 415px;">
    <div class="col-md-8 col-md-offset-2">
        <h4>My Orders</h4>
        {{#each orders}}
        <div class="card">
            <div class="card-body">
                <ul class="list-group">
                    {{#each this.items}}
                    <li class="list-group-item">
                        <img src="{{this.item.Image}}" alt="" style="width: 50px; height: 50px;">
                        <span style="font-weight: 600;">{{this.item.title}}</span> | {{this.qty}} Units
                        <span class="badge bg-dark text-light" style="float:right; margin:16px 0">${{this.price}}</span>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="card-footer text-muted">
                <strong>Total Price: <span style="color: crimson;">${{this.cart.totalPrice}}</span></strong>
            </div>
        </div>
        <br>
        {{/each}}
    </div>
</div>
{{else}}
<div class="row mt-3" style="min-height: 350px;">
    <div class="col-md-4 col-md-offset-4"
        style="width: 300px; margin: 68px auto 0;">
        <h2 class="text-center">No Orders....</h2>
        <!---<a href="/productUser" class="btn btn-link;" style="width:300px;margin: auto;">Back</a>-->
    </div>
    
</div>

{{/if}}